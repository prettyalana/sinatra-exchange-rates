{
    "windmillcode-open-related-files": {
    "options": [
      {
        "name": "Angular Component Development",
        "searchPaths": [
          "apps/frontend/AngularApp/src"
        ],
        "fileRegexPredicate":"\\.component\\.(ts|scss|html)$",
        "setEditorLayout":{
          "orientation": 1,
          "groups": [
            {
              "groups": [{},{}],
              "size":0.5
            }
          ]
        },
        "includeGlobs": [
          [
            ["**/FILE_NAME_BASIS.component.ts"],
            ["**/FILE_NAME_BASIS.component.html","**/FILE_NAME_BASIS.component.scss"]
          ],
        ],
      },
      {
        "name": "Angular Test Cases",
        "searchPaths": [
          "apps/frontend/AngularApp/src"
        ],
        "fileRegexPredicate":"\\.(ts|spec.ts)$",
        "setEditorLayout":{
          "orientation": 1,
          "groups": [
            {
              "groups": [{},{}],
              "size":0.5
            }
          ]
        },
        "includeGlobs": [
          [
            ["**/FILE_NAME_BASIS.spec.ts"],
            ["**/FILE_NAME_BASIS.ts"]
          ],
        ],
      },
      {
        "name": "Flask Test Cases",
        "searchPaths": [
          "apps/backend/FlaskApp"
        ],
        "subStringRemovalArray":[
          "test_",
          ".py"
        ],
        "setEditorLayout":{
          "orientation": 1,
          "groups": [
            {
              "groups": [{},{}],
              "size":0.5
            }
          ]
        },
        "includeGlobs": [
          [
            ["**/test_FILE_NAME_BASIS.py"],
            ["**/FILE_NAME_BASIS.py"]
          ],
        ],
      }
    ]
  }
}